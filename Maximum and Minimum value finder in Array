#include <stdio.h>
#include <stdlib.h>

int main()
{
    int x;
    printf("enter the size of the array = ");
    scanf("%d",&x);
    int i;
    int arr[x];


    for(i=0;i<x;i++){

    printf("Enter the %d element of the array= ",i+1);
    scanf("%d",&arr[i]);

        }
    int max,min;
    max=min=arr[0];

    for(i=0;i<x;i++){
    if(arr[i]<min){
        min=arr[i];
    }

    if(arr[i]>max){
        max=arr[i];
    }
    }
    printf("maximum = %d\n minimum = %d",max,min);
    return 0;
}
