#include <stdio.h>
#include <math.h>

int main()
{
  int Number, Temp, Reminder, Times =0, Sum = 0;
 printf("***press 0 to leave the program***\n");

st:
  Times=0;
  Sum=0;
  printf("Please Enter number to Check for Armstrong \n");
  scanf("%d", &Number);
  if (Number==0)
    goto end;

  Temp = Number;
  while (Temp != 0)
   {
      Times = Times + 1;
      Temp = Temp / 10;
   }

  Temp = Number;
  while( Temp > 0)
   {
     Reminder = Temp %10;
     Sum = Sum + pow(Reminder, Times);
     Temp = Temp /10;
   }

  printf("Sum of entered number is = %d\n", Sum);

  if ( Number == Sum )
      printf("YES , %d is Armstrong Number.\n", Number);
  else
      printf("NO , %d is not a Armstrong Number.\n", Number);
 goto st;
 end:
  return 0;
}
