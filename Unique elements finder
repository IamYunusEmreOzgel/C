#include <stdio.h>
#include <stdlib.h>

int main(){
    int limit;

    printf("You can create an array of up to 100 elements.\n");
    printf("How many elements do you want the array to contain?");
    scanf("%d",&limit);
    int arr[101];

    for(int k=0; k<limit; k++){
        printf("%d enter the value..): ", k+1);
        scanf("%d", &arr[k]);
    }
    for(int i=0; i<limit; i++){
        int counter= 1;
        for(int j=i+1; j<limit; j++){
            if(arr[i] == arr[j]){
                counter++;
                arr[j] = -1;
            }
        }
      if(arr[i] != -1 && counter==1){
                printf(" \n ");
                printf("The value of %d is unique",arr[i]);
                printf(" \n ");
        }
      if(arr[i] != -1 && counter !=1){

            printf(" \n ");
            printf("You entered the value %d %d times(it isn't unique)\n",arr[i],counter);
            printf(" \n ");
            }
}
    return 0;
}
